<h2>Welcome to Pizza Shop!</h2>
<br />
<div class="row">
  <% @products.each do |p| %>
  <div class="col-md-3">
    <div>
    <%= p.title  %>
    </div>
    <div>
    <img src="<%= p.path_to_image %>" weight="200" height="200" />
    </div>
    <div>
      <%= p.description  %>
    </div>
    <div>
      Size: <%= p.size  %> cm
    </div>
    <div>
      Price: <%= p.price %> rub
    </div>
    <div>
      <button class="btn btn-success btn-sm" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
    </div>

  </div>
  <% end %>
</div>
<br />
<br />
<button class="btn btn-primary btn-lg" onclick="something()">Click me!</button>

<script type="text/javascript">
  
$(function () {
  update_orders_input();
  update_orders_button();

});
</script>