<% totals = {price: 0, qty: 0} %>
<h2>Your cart</h2>
<table class="table">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Price</th>
    <th scope="col">Qty</th>
  </tr>
  </thead>
  <tbody>
  <% totals[:price] = 0 %>
  <% totals[:qty] = 0 %>
  <% @items.each do |item| %>
  <tr>
    <td><%= item[0].title %></td>
    <td><%= item[0].price %></td>
    <td><%= item[1]%></td>
  </tr>
    <% totals[:price] += item[0].price * item[1].to_i %>
    <% totals[:qty] = totals[:qty] + item[1].to_i %>
    <% end %>
    <tr>
      <td></td>
      <td>Total: <%= totals[:price] %> Rub</td>
      <td><%= totals[:qty] %></td>
    </tr>

  </tbody>
</table>